%div
  %span
    = link_to '添加规格', quick_new_shop_product_option_types_path(product),
      class: 'fancybox action', data: { 'fancybox-type': 'ajax' }
- product.option_types.each do |type|
  %div.items
    %span.btn_group
      = type.name
      = link_to 'X', shop_product_option_type_path(product, type),
                     method: :delete, class: 'x_mark',
                     data: { confirm: '确定删除吗？' }
    - type.option_values.each do |value|
      %span.btn_group
        = value.name
        = link_to 'X', shop_option_value_path(value, product_id: product.id),
                       method: :delete, class: 'x_mark',
                       data: { confirm: '确定删除吗？' }
    %span
      = link_to '添加规格值', quick_new_shop_option_type_option_values_path(type),
                          class: 'fancybox action', data: { 'fancybox-type': 'ajax' }
