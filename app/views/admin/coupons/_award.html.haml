%div.award_coupon
  = form_tag award_admin_coupon_path(resource) do
    %div.container
      %div.coupon_input_user
        = label_tag 'mobile', '用户：'
        = text_field_tag 'mobile', nil, placeholder: '请输入要发放的用户手机号！'
        = link_to '查看用户信息', '#'
      %div{style: 'margin-top: 30px;'}
        = submit_tag '发放', data: { confirm: "操作不可逆，确定发放吗？" }