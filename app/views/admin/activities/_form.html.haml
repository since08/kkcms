= semantic_form_for [:admin, resource] do |f|
  = f.semantic_errors *f.object.errors.keys
  = f.inputs do
    = f.input :title
    = f.input :intro
    = f.input :banner, as: :attachment, required: true,
                     hint: '图片最大为 2MB',
                     image: proc { |o| o.preview_image }
    = f.input :published
    = f.input :begin_time
    = f.input :end_time
    = f.input :doc, as: :file, hint: '必须为docx格式', input_html: { name: 'doc' }
    ~ f.text_area :description
  = f.submit data: { disable_with: '请稍等...' }

:javascript
  $(function() {
    dpEditor.call($('#activity_description'), $('form.activity'));
  });
